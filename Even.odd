#include <iostream>

using namespace std;

void checkNumber(int num) {
    // Check if the number is divisible by 2
    if (num % 2 == 0) {
        cout << num << " is an Even number." << endl;
    } else {
        cout << num << " is an Odd number." << endl;
    }
}

int main() {
    int num1 = 42;
    int num2 = 101;
    
    cout << "--- Even/Odd Checker ---" << endl;
    checkNumber(num1);
    checkNumber(num2);
    
    return 0;
}
